<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:elevation="3dp"
    android:layout_height="300dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dropshadow_two"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
>

<androidx.cardview.widget.CardView
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    android:layout_marginEnd="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageRecycler"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/roleRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:translationZ="3dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:background="@drawable/shape"
        android:backgroundTint="#FB8C00"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Pure Breed"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/nameRecycler"
        android:layout_marginTop="10dp"
        android:layout_width="125dp"
        android:ellipsize="end"
        android:layout_height="25dp"
        android:maxLines="1"
        android:text="Pet name"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppinsemibold"
        android:textSize="17sp"
        android:textColor="@color/material_blue_grey_90"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/breedRecycler"
        android:layout_marginStart="10dp"
        android:layout_width="125dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="23dp"
        android:text="Breed"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsmedium"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/kennelRecycler"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"
        android:layout_width="115dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="DisplayFor"
        android:textStyle="bold"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsregular"
        tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:background="@drawable/dropshadow_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="EDIT"
                android:shadowRadius="10"
                android:shadowColor="@color/material_blue_grey_80"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText" />
        </LinearLayout>





</LinearLayout>