<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    tools:context=".marketplace.m_products_fragment">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/fbWhite"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/products_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />
        <TextView
            android:visibility="gone"
            android:id="@+id/noOneTextView_pet_sale_card"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No one is selling at this point"
            android:layout_below="@id/products_recycler"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</FrameLayout>