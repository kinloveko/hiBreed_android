<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    android:layout_height="210dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/dropshadow_two"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_marginEnd="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="20dp"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="5dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageRecycler"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/card"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsmedium"
        android:maxLines="3"
        android:text="Appointment request"
        android:textColor="@color/material_blue_grey_90"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/descriptionRecycler"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/label"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/card"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsregular"
        android:maxLines="1"
        android:singleLine="true"
        android:text="March 12, 2023 @ 10:00 PM"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/nameRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionRecycler"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/card"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsregular"
        android:maxLines="2"
        android:text="Kenneth Dela Cruz"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/numberRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameRecycler"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/card"
        android:ellipsize="end"
        android:fontFamily="@font/poppinsregular"
        android:maxLines="2"
        android:text="09318924806"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/buttonContact"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dropshadow_button_four"
        android:gravity="center">

        <TextView
            android:id="@+id/button_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shadowColor="@color/material_blue_grey_80"
            android:shadowRadius="10"
            android:text="ACCEPT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/buttonDelete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dropshadow_button_zero"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shadowColor="@color/material_blue_grey_80"
            android:shadowRadius="10"
            android:text="DECLINE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>