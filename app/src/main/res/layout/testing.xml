<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/userValidation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:text="Identification"
                    android:textColor="@color/material_blue_grey_90"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Valid ID"
                    android:textColor="@color/material_blue_grey_90"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/userDropImage"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/imageview_user_style"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_dotted_two" />

                        <ImageView
                            android:id="@+id/user_dropImageViewVet"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/icon_photo_two" />

                        <ImageView
                            android:id="@+id/user_image_upload"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/add_photo_user"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:text="+ Upload Photo"
                            android:textColor="@color/material_blue_grey_90"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/user_example"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/valid_id_photo"
                        android:translationZ="3dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Your ID information is required to verify your identity using the photo that you will be submitting to prevent others from impersonating your identity and to validate your real identity."
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_consent_layout"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsemibold"
                    android:text="Parent Consent"
                    android:textColor="@color/material_blue_grey_90"
                    android:textSize="17sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Parent or Legal guardian valid id"
                    android:textColor="@color/material_blue_grey_90"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/guardian"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/guardian_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_dotted_two" />

                        <ImageView
                            android:id="@+id/guardian_image_view"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/icon_photo_two" />

                        <ImageView
                            android:id="@+id/guardian_valid_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/guardian_add_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:text="+Upload Photo"
                            android:textColor="@color/material_blue_grey_90"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/valid_id_example"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/valid_id_photo"
                        android:translationZ="3dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Parental Consent(Save it as photo JPEG/PNG)"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/guardian_consent"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/guardian_img_consent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_dotted_two" />

                        <ImageView
                            android:id="@+id/guardian_image_view_consent"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/icon_photo_two" />

                        <ImageView
                            android:id="@+id/guardian_consent_submitted"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/guardian_add_photo_consent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:text="+ Upload Consent as image"
                            android:textColor="@color/material_blue_grey_90"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText" />

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/valid_id_example_consent"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/semiGrey"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/example_consent"
                        android:translationZ="3dp" />

                </LinearLayout>

                <Button
                    android:paddingStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/primaryButton"
                    android:background="@color/float_transparent"
                    android:id="@+id/download_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Consent here"

                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>