<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    android:elevation="3dp"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:id="@+id/shopLinear"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/icon_petshope" />


        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Shop name"
            android:textColor="@color/material_blue_grey_80"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopLinear"
        android:background="@color/white"
        android:elevation="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/cardView"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:text="Pet Name"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/breed"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@id/cardView"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:text="Pet Breed"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pesoSign"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name"
            android:layout_marginTop="-7dp"
            android:layout_toStartOf="@id/itemValue"
            android:gravity="center"
            android:text="â‚±"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/itemValue"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@id/pet_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsregular"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="1500"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />


    </RelativeLayout>


</RelativeLayout>