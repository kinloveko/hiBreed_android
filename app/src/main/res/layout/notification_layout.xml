<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="3dp"
    android:backgroundTint="@color/white"
    android:layout_height="100dp" android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"

            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/cardView"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:text="Pet Name"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/breed"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pet_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@id/cardView"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsregular"
            android:maxLines="1"
            android:text="Pet Breed"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/itemValue"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@id/breed"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/cardView"
            android:background="@drawable/dropshadow_button_zero"
            android:backgroundTint="@color/lightWhite"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsmedium"

            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="1500"
            android:textColor="@color/material_blue_grey_80"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/delete"
            android:src="@drawable/icon_check_boxs" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_deleted" />
    </RelativeLayout>


</RelativeLayout>